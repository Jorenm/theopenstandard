section.gallery
	overflow: hidden
	div.thumbnail
		background-repeat: no-repeat
		background-size: cover
		background-position: center center
		margin: 1rem
		float: left
		height: 14rem
		width: 14rem
		a
			position: absolute
			top: 0
			bottom: 0
		a.share
			left: 0
			right: 50%
		a.view
			right: 0
			left: 50%
			
.gallery_full
	position: relative
	height: 34rem
	div.full_image
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		background-size: cover
		background-repeat: no-repeat
		background-position: center
		opacity: 0			
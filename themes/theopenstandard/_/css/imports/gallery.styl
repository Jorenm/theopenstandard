section.gallery
	overflow: hidden
	margin-bottom: 1rem
	div.thumbnail
		background-repeat: no-repeat
		background-size: cover
		background-position: center center
		margin: 1rem
		float: left
		height: 11rem
		width: 11rem
		position: relative
		a
			position: absolute
			top: 0
			bottom: 0
		a.share
			left: 0
			right: 50%
		a.view
			right: 0
			left: 0

div.modal
	section.gallery
		div.thumbnail
			width: 10rem
			height: 10rem			

.gallery_full
	margin-top: 1rem
	margin-bottom: 3.5rem
	position: relative
	height: 34rem
	background: url("../images/loader.gif") no-repeat center center
	div.full_image
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		background-size: cover
		background-repeat: no-repeat
		background-position: center
		opacity: 0
		transition: opacity 1s
		&.active.loaded
			opacity: 1
			z-index: 1
		p.caption
			position: absolute
			bottom: -3.5rem
			font-size: .8rem
			text-align: center
			color: #888888
			left: 0
			width: 100%

	div.arrow-right, div.arrow-left
		top: 12rem
		z-index: 2
body.modal-open
	overflow: hidden
	height: 100%

body#modal
	overflow: hidden

div.modal
	width: 100%
	height: 100%
	position: fixed
	z-index: 9999
	top: 0
	left: 0
	display: none
	overflow-y: auto
	overflow-x: hidden
	background-color: white
	&.open
		display: block

	div.tabs
		text-align: center
		padding: 0 0 2rem 0
		a
			margin: 0 1rem
			&.active
				text-decoration: underline

	div.tab.content
		display: none
		&.active
			display: block	

	div.close-button
		z-index: 2
		
	h2
		color: #005da5
		margin-bottom: 1rem	

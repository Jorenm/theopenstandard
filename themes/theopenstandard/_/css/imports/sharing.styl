$share-size = 2rem

div.story-header div.social
    position: absolute
    right: 100%
    margin-right: 2rem
    width: 110px
    bottom: 0

ul.share-ratios
    height: 100px
    position: relative
    margin-bottom: 2px
    li
        width: $share-size
        position: absolute
        height: 0
        transition: height 1s
        bottom: 0
        margin: 0
        div.bar
            height: 100%
            width: $share-size
            min-height: $share-size
            position: absolute
            bottom: 0
            left: 0
        &.twitter 
            left: 0
            div.bar
                background-color: #5ec2df
        &.facebook 
            left: ($share-size * 1.25)
            div.bar
                background-color: #2c6087
        &.googleplus 
            left: ($share-size * 2.5)
            div.bar
                background-color: #e03e12

    button
        position: absolute
        bottom: 0; left: 0
        margin: 0; padding: 0
        height: $share-size; width: $share-size
        z-index: 1
        border: none
    button.twitter-button
        background: url('../images/icons/social-twitter.svg') no-repeat center center; background-size: $share-size - .2
    button.facebook-button
        background: url('../images/icons/social-facebook.svg') no-repeat center center; background-size: $share-size - .2
    button.googleplus-button
        background: url('../images/icons/social-google-plus.svg') no-repeat center center; background-size: $share-size - .2
        
ul.share
    list-style: none
    margin: 0
    li
        cursor: none
        color: #333
        font-size: .8rem
        list-style: none
    .share-icon
        float: left
        button
            width: 2rem
            height: 2rem
            display: block
            cursor: pointer
            padding: 0
            margin: 0 .5rem 0 0
            &:hover
                opacity: .7
        &.twitter button
            background: url('../images/icons/social-twitter-grey.svg') no-repeat center center; background-size: $share-size - .4
        &.facebook button
            background: url('../images/icons/social-facebook-grey.svg') no-repeat center center; background-size: $share-size - .4
        &.googleplus button
            background: url('../images/icons/social-google-plus-grey.svg') no-repeat center center; background-size: $share-size - .4